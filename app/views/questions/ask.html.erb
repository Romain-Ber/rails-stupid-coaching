<div class="container">
  <h1>Stupid Coaching</h1>
  <p>Ask your coach anything:</p>
  <div class="w-100">
    <form action="answer" data-turbo="false" method="get" class="form-inline">
      <div class="input-group">
        <input type="text" class="form-control" name="question" value="<%= params[:question] %>">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Ask!</button>
        </div>
      </div>
    </form>
  </div>
</div>
